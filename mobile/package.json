{
  "name": "quick-meet-mobile",
  "version": "1.0.99",
  "description": "Quick Meet â€” Mobile App (Capacitor + Android)",
  "scripts": {
    "build:web": "cd ../client && npm run build",
    "cap:init": "npx cap init \"Quick Meet\" com.quickmeet.app --web-dir ../client/dist",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:run:android": "npx cap run android",
    "android": "npm run build:web && npx cap sync android && npx cap open android",
    "ios": "npm run build:web && npx cap sync ios && npx cap open ios"
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "^5.0.7",
    "@capacitor/camera": "^5.0.8",
    "@capacitor/core": "^5.6.0",
    "@capacitor/filesystem": "^5.2.1",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/keyboard": "^5.0.8",
    "@capacitor/local-notifications": "^5.0.7",
    "@capacitor/network": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor-community/file-opener": "^1.0.5"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.6.0"
  }
}
