{
  "appId": "com.quickmeet.app",
  "appName": "Quick Meet",
  "webDir": "../client/dist",
  "server": {
    "url": "https://quickmeet.genuinesoftmart.store",
    "cleartext": false,
    "allowNavigation": ["quickmeet.genuinesoftmart.store"]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#0a0a0f",
      "showSpinner": true,
      "spinnerColor": "#6366f1"
    },
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#0a0a0f"
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon",
      "iconColor": "#6366f1"
    }
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  }
}
